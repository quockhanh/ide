{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2021.String"],
    "outDir": "dist/commonjs",
    "declaration": true,
    "target": "es2021",
    "module": "commonjs",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*"]
}
